<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhpcs.liquidity">
    <!-- TODO -->

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.GameTypesActivity"
            android:label="@string/title_activity_game_types">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GamesActivity"
            android:label="@string/title_activity_games_activity"
            android:parentActivityName=".activities.GameTypesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhpcs.liquidity.activities.GameTypesActivity" />
        </activity>
        <activity
            android:name=".activities.MonopolyGameActivity"
            android:label="@string/title_activity_monopoly_game"
            android:parentActivityName=".activities.GamesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dhpcs.liquidity.activities.GamesActivity" />
        </activity>

    </application>

</manifest>
