<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.dhpcs.liquidity.fragments.TransferToPlayerDialogFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transfer_from" />

    <TextView
        android:id="@+id/textview_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner_identities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transfer_amount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edittext_transfer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textview_multiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/togglebutton_value_multiplier_million"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/value_multiplier_million"
            android:textOn="@string/value_multiplier_million" />

        <ToggleButton
            android:id="@+id/togglebutton_value_multiplier_thousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/value_multiplier_thousand"
            android:textOn="@string/value_multiplier_thousand" />

    </LinearLayout>

</LinearLayout>
